@model IEnumerable<IdentitySecuredApp.Models.Laptop>
    <h2>Laptop Store</h2>
<p style="font-size:20px">Shop all brand laptops with great price!</p>
<div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <a asp-controller="home" asp-action="index"><button class="btn btn-danger" type="button">Logout</button> </a>
</div>

    
    <div class="card-deck">
        @foreach (var item in Model)
        {


                    <div class="card m-3" style="min-width: 15rem; max-width:30.5%; ">
                        <div class="card-header" style="position: relative;">
                            <p style="font-size:20px">@item.Title</p>
                        </div>
                        <img class="card-img-top" src="@item.ImageUrl" alt="Laptop Image" height="150px" />
                        <div class="card-footer text-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                      
                        </div>
                    </div>}
    </div>
